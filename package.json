{
  "name": "@mcptoolshop/websketch-ir",
  "version": "0.4.1",
  "description": "Grammar-based representation of web UI for LLM consumption",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./grammar": {
      "types": "./dist/grammar.d.ts",
      "import": "./dist/grammar.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "HANDBOOK.md",
    "CHANGELOG.md",
    "LICENSE",
    "logo.png"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "test": "node --experimental-vm-modules node_modules/vitest/vitest.mjs",
    "test:run": "node --experimental-vm-modules node_modules/vitest/vitest.mjs run",
    "coverage": "node --experimental-vm-modules node_modules/vitest/vitest.mjs run --coverage",
    "validate": "npm run clean && npm run typecheck && npm run lint && npm run build && npm run test:run",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "websketch",
    "ui-testing",
    "web-automation",
    "llm",
    "ai-agents",
    "browser-automation",
    "ui-representation",
    "ascii-art",
    "diff",
    "fingerprint"
  ],
  "author": "MCP Tool Shop",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-tool-shop-org/websketch-ir.git"
  },
  "bugs": {
    "url": "https://github.com/mcp-tool-shop-org/websketch-ir/issues"
  },
  "homepage": "https://github.com/mcp-tool-shop-org/websketch-ir#readme",
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "rimraf": "^6.1.3",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
